<table class="ui table">
  <thead>
  <tr>
    <th>Code</th>
    <th>Temp</th>
    <th>Wind Speed</th>
    <th>Pressure</th>
    <th>Remove</th>
  </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
          {{code}}
        </td>
        <td>
          {{temp}}
        </td>
            <td>
          {{windspeed}}
        </td>
        <td>
          {{pressure}}
        </td>
         <td>
          <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui tiny red button">Delete Reading</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>